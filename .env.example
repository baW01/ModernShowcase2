# Runtime
NODE_ENV=development

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ADMIN_PASSWORD_HASH=$2a$10$YourHashedPasswordHere
HASH_SECRET=your-secure-hash-secret

# Session
SESSION_SECRET=your-session-secret-change-this-in-production

# Database (Neon/Postgres)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME?sslmode=require

# Email (SMTP or SendGrid SMTP)
# Primary (SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
FROM_EMAIL=noreply@spottedgfc.pl
# Optional TLS overrides (e.g., self-signed or mismatched cert)
SMTP_TLS_REJECT_UNAUTHORIZED=true
SMTP_TLS_SERVERNAME=smtp.sendgrid.net
# Legacy fallback (if you prefer to just provide the SendGrid key)
SENDGRID_API_KEY=your-sendgrid-api-key

# Public URLs
PUBLIC_BASE_URL=http://195.117.36.97
FRONTEND_URL=http://195.117.36.97

# Object storage (optional)
PUBLIC_OBJECT_SEARCH_PATHS=
PRIVATE_OBJECT_DIR=

# Client build
VITE_API_BASE_URL=http://195.117.36.97:5000
